# Database Configuration
# Choose database type: 'mongodb' or 'dynamodb'
DB_TYPE=mongodb

# MongoDB Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/ai-study-circle

# DynamoDB Configuration (if using DynamoDB)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
DYNAMODB_TABLE_PREFIX=ai-study-circle
# DYNAMODB_ENDPOINT=http://localhost:8000  # Uncomment for DynamoDB Local

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_make_it_long_and_random
JWT_EXPIRE=24h

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50000000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration (Optional - for file storage)
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1