# Logging Configuration Environment Variables
# Add these to your .env file

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Enable/Disable Features
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_REMOTE_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# ============================================
# ELK STACK CONFIGURATION
# ============================================

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Logstash Configuration
LOGSTASH_ENABLED=false
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5044
LOGSTASH_PROTOCOL=tcp

# ============================================
# EXTERNAL MONITORING SERVICES
# ============================================

# Sentry Configuration (Error tracking)
SENTRY_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# LOG SAMPLING AND PERFORMANCE
# ============================================

# Sampling Rates (0.0 to 1.0)
LOG_SAMPLING_SUCCESS_REQUESTS=1.0
LOG_SAMPLING_DEBUG=1.0
LOG_SAMPLING_PERFORMANCE=1.0

# Performance Thresholds
LOG_SLOW_REQUEST_THRESHOLD=1000
LOG_HIGH_TOKEN_USAGE_THRESHOLD=4000
LOG_HIGH_TRANSLATION_LATENCY_THRESHOLD=2000

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Security Logging
LOG_MASK_SENSITIVE_DATA=true
LOG_SECURITY_EVENTS=true
LOG_RATE_LIMITING=true
LOG_MAX_BODY_SIZE=10000

# ============================================
# FILE LOGGING CONFIGURATION
# ============================================

# File Rotation Settings
LOG_MAX_FILE_SIZE=20m
LOG_MAX_FILES=30d
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_ERROR_RETENTION=14d
LOG_COMBINED_RETENTION=30d
LOG_AUDIT_RETENTION=90d

# ============================================
# DEVELOPMENT/PRODUCTION OVERRIDES
# ============================================

# Development Environment
# LOG_LEVEL=debug
# ENABLE_CONSOLE_LOGGING=true
# ELASTICSEARCH_ENABLED=false

# Production Environment  
# LOG_LEVEL=info
# ENABLE_CONSOLE_LOGGING=false
# ELASTICSEARCH_ENABLED=true
# SENTRY_ENABLED=true
# LOG_SAMPLING_SUCCESS_REQUESTS=0.1

# ============================================
# MONITORING AND ALERTING
# ============================================

# Alert Thresholds
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_RESPONSE_TIME_THRESHOLD=2000
ALERT_DISK_USAGE_THRESHOLD=0.85
ALERT_MEMORY_USAGE_THRESHOLD=0.9

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
LOG_HEALTH_STATUS=true