# Environment variables for Docker production
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
MONGODB_USERNAME=admin
MONGODB_PASSWORD=change-this-strong-password-in-production
REDIS_PASSWORD=change-this-redis-password-in-production

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=change-this-super-strong-jwt-secret-in-production
JWT_REFRESH_SECRET=change-this-super-strong-refresh-secret-in-production
SESSION_SECRET=change-this-super-strong-session-secret-in-production

# AI Services
OPENAI_API_KEY=your_production_openai_api_key
GOOGLE_TRANSLATE_API_KEY=your_production_google_translate_api_key

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# OAuth Configuration - Facebook
FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret

# OAuth Configuration - Microsoft
MICROSOFT_CLIENT_ID=your_production_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_production_microsoft_client_secret

# Application URLs (Update with your domain)
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# Docker-specific configuration
COMPOSE_PROJECT_NAME=ai-study-circle-prod
DOCKER_BUILDKIT=1

# SSL Configuration (if using Let's Encrypt or custom certs)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key