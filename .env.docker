# Environment variables for Docker development
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password123
REDIS_PASSWORD=redis123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-development
JWT_REFRESH_SECRET=your-super-secret-refresh-key-development
SESSION_SECRET=your-super-secret-session-key-development

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth Configuration - Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# OAuth Configuration - Microsoft
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Docker-specific configuration
COMPOSE_PROJECT_NAME=ai-study-circle
DOCKER_BUILDKIT=1